@{
}
@inject UserManager<IdentityUser> UserManager

<link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />

<style>
    tr {
        background-color: white !important;
    }

        tr:nth-child(odd) {
            background-color: #eeeeee !important;
        }
</style>

<h1>Certificates</h1>

<p>
    Here you can find certificates to download
</p>

@if (User.IsInRole("Student"))
{
    <table class="table">
        <tr>
            <td>Adeverinta de student</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
        <tr>
            <td>Adeverinta pentru locul de munca</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
        <tr>
            <td>Alta adeverinta</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
    </table>
}
@if (User.IsInRole("Teacher"))
{
    <table class="table">
        <tr>
            <td>Adeverinta de munca</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
        <tr>
            <td>Adeverinta de concediu</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
        <tr>
            <td>Alta adeverinta</td>
            <td><a href="~/doc/Certificates/">Download PDF</a></td>
        </tr>
    </table>
}
