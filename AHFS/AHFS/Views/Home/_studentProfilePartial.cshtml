@model AHFS.Models.Student //use student

@{
    ViewData["Title"] = "Details";
}
@inject UserManager<IdentityUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<link rel="stylesheet" href="~/css/profile-info.css" asp-append-version="true" />

<div id="profile-parent">
    <table>
        <tr>
            <th class="personal-info">
                Personal Information
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Email)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                Gender
            </td>
            <td>
                @Html.DisplayFor(model => model.Sex)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.CNP)
            </td>
            <td>
                @Html.DisplayFor(model => model.CNP)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Age)
            </td>
            <td>
                @Html.DisplayFor(model => model.Age)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.PhoneNr)
            </td>
            <td>
                @Html.DisplayFor(model => model.PhoneNr)
            </td>
        </tr>
    </table>

    <a id="profile-edit-btn" asp-action="ProfileStudentEdit" asp-route-id="@Model.StudentId">Edit<img src="~/images/crayon.png" /></a>

    <table>
        <tr>
            <th class="account-info">
                Student Information
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Faculty)
            </td>
            <td>
                @Html.DisplayFor(model => model.Faculty)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Class)
            </td>
            <td>
                @Html.DisplayFor(model => model.Class)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Group)
            </td>
            <td>
                @Html.DisplayFor(model => model.Group)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Subgroup)
            </td>
            <td>
                @Html.DisplayFor(model => model.Subgroup)
            </td>
        </tr>
        <tr>
            <td>

                @Html.DisplayNameFor(model => model.Scholarship)
            </td>
            @if (Model.Scholarship == true)
            {
                <td>
                    Yes
                </td>
            }
            else
            {
                <td>
                    No
                </td>
            }
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.FinalGrade)
            </td>
            <td>
                @Html.DisplayFor(model => model.FinalGrade)
            </td>
        </tr>
    </table>
</div>